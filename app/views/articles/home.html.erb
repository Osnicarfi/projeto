	  	<% @articles.sort_by { |article| article.reviews.count }.reverse.each_with_index do |article, c| %>
			  <% if article.category_id == 1 %>	
			  	<div class="panel panel-default">
      			  <div class="panel-body">	  	
						<h1><%= link_to article.title, article %></h1>
						<%= link_to image_tag(article.image.url(:medium)), article if article.image_updated_at%>
					<div class="panel-footer">
						<h7><%= link_to article.user.name, article.user, style: 'color: black' %></h7><br>
						<%= pluralize(article.reviews.count, "voto") %>
					</div>
				  </div>
